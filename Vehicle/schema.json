{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://smart-data-models.github.io/dataModel.Transportation/Vehicle/schema.json",
  "title": " - Vehicle - ",
  "description": "This entity models a particular vehicle model, including all properties which are common to multiple vehicle instances belonging to such model.",
  "type": "object",
  "allOf": [{
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
    },
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/PhysicalObject-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Vehicle"
          ],
          "description": "NGSI Entity type"
        },
        "vehicleType": {
          "type": "string",
          "enum": [
            "agriculturalVehicle",
            "anyVehicle",
            "articulatedVehicle",
            "bicycle",
            "bus",
            "minibus",
            "car",
            "caravan",
            "carOrLightVehicle",
            "carWithCaravan",
            "carWithTrailer",
            "constructionOrMaintenanceVehicle",
            "fourWheelDrive",
            "highSidedVehicle",
            "lorry",
            "moped",
            "motorcycle",
            "motorcycleWithSideCar",
            "motorscooter",
            "tanker",
            "threeWheeledVehicle",
            "trailer",
            "tram",
            "twoWheeledVehicle",
            "van",
            "vehicleWithoutCatalyticConverter",
            "vehicleWithCaravan",
            "vehicleWithTrailer",
            "withEvenNumberedRegistrationPlates",
            "withOddNumberedRegistrationPlates",
            "other"
          ]
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "public",
              "private",
              "municipalServices",
              "specialUsage",
              "tracked",
              "nonTracked"
            ]
          }
        },
        "previousLocation": {
          "$ref": "http://geojson.org/schema/Geometry.json#",
          "description": "The start point of this road segment encoded as a GeoJSON point"
        },
        "speed": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0
            },
            {
              "type": "number",
              "enum": [-1]
            }
          ]
        },
        "heading": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 360
            },
            {
              "type": "number",
              "const": -1
            }
          ]
        },
        "cargoWeight": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "vehicleIdentificationNumber": {
          "type": "string"
        },
        "vehiclePlateIdentifier": {
          "type": "string"
        },
        "fleetVehicleId": {
          "type": "string"
        },
        "dateVehicleFirstRegistered": {
          "type": "string",
          "format": "date"
        },
        "dateFirstUsed": {
          "type": "string",
          "format": "date"
        },
        "purchaseDate": {
          "type": "string",
          "format": "date-time"
        },
        "mileageFromOdometer": {
          "type": "number"
        },
        "vehicleConfiguration": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "feature": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "gps",
              "airbag",
              "overspeed",
              "abs",
              "wifi",
              "backCamera",
              "proximitySensor",
              "disabledRamp",
              "alarm",
              "internetConnection"
            ]
          }
        },
        "serviceProvided": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "garbageCollection",
              "parksAndGardens",
              "construction",
              "streetLighting",
              "roadSignalling",
              "cargoTransport",
              "urbanTransit",
              "maintenance",
              "streetCleaning",
              "wasteContainerCleaning",
              "auxiliaryServices",
              "goodsSelling",
              "fairground",
              "specialTransport"
            ]
          }
        },
        "vehicleSpecialUsage": {
          "type": "string",
          "enum": [
            "taxi",
            "ambulance",
            "police",
            "fireBrigade",
            "schoolTransportation",
            "military"
          ]
        },
        "refVehicleModel": {
          "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType"
        },
        "areaServed": {
          "type": "string"
        },
        "serviceStatus": {
          "type": "string",
          "enum": [
            "parked",
            "onRoute",
            "broken",
            "outOfService"
          ]
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "vehicleType",
    "category",
    "location"
  ]
}
