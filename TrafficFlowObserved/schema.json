{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://fiware.github.io/dataModels/specs/Transportation/TrafficFlowObserved/schema.json",
  "title": "FIWARE - Transportation / TrafficFlowObserved",
  "description": "TrafficFlowObserved",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TrafficFlowObserved"
          ],
          "description": "NGSI Entity type"
        },
        "laneId": {
          "type": "integer",
          "minimum": 0
        },
        "refRoadSegment": {
          "type": "string",
          "format": "uri"
        },
        "dateObserved": {
          "type": "string"
        },
        "dateObservedFrom": {
          "type": "string",
          "format": "date-time"
        },
        "dateObservedTo": {
          "type": "string",
          "format": "date-time"
        },
        "intensity": {
          "type": "number",
          "minimum": 0
        },
        "occupancy": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "averageVehicleSpeed": {
          "type": "number",
          "minimum": 0
        },
        "averageVehicleLength": {
          "type": "number",
          "minimum": 0
        },
        "averageGapDistance": {
          "type": "number",
          "minimum": 0
        },
        "congested": {
          "type": "boolean"
        },
        "averageHeadwayTime": {
          "type": "number",
          "minimum": 0
